<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MessengerApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/theme_blue</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="login_edit_text" parent = "Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:padding">@dimen/login_text_padding</item>
        <item name="android:layout_marginEnd">@dimen/txt_top_margin</item>
        <item name="android:layout_marginStart">@dimen/txt_top_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_profile</item>
        <item name="android:textColorHint">@color/grey_hint</item>
    </style>
</resources>